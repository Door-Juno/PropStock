# .env.example
#
# 이 파일은 환경 변수 설정을 위한 템플릿입니다.
# 이 파일을 복사하여 `.env` 라는 이름으로 저장한 후,
# YOUR_..._HERE 부분을 실제 환경에 맞는 값으로 변경해주세요.
#
# **주의:** `.env` 파일은 절대로 Git에 커밋하지 마세요!

# --- 데이터베이스 설정 (PostgreSQL) ---
# Django 백엔드와 DB 서비스가 사용할 데이터베이스 이름.
# 일반적으로 모든 팀원이 동일하게 사용합니다.
POSTGRES_DB=propstock

# PostgreSQL 데이터베이스 사용자 이름.
# 일반적으로 모든 팀원이 동일하게 사용합니다.
POSTGRES_USER=myuser

# PostgreSQL 데이터베이스 비밀번호.
# **각 팀원이 자신의 로컬 환경에서 사용할 고유하고 안전한 비밀번호로 설정하세요.**
POSTGRES_PASSWORD=bin03170

# --- 서비스 포트 설정 (선택 사항) ---
# 도커 컴포즈가 로컬 호스트에 노출할 각 서비스의 포트입니다.
# 포트 충돌 시에만 주석을 해제하고 다른 포트 번호로 변경하세요.
# 컨테이너 내부 포트(콜론 오른쪽)는 변경하지 마세요.

# DB 서비스 포트 (예: 5432)
# DB_PORT=5432

# Django 백엔드 서비스 포트 (예: 8000)
# DJANGO_PORT=8000

# React 프론트엔드 서비스 포트 (예: 3000)
# REACT_PORT=3000

# FastAPI AI 서비스 포트 (예: 8001)
# AI_PORT=8001

# --- AI 서비스 설정 ---
# FastAPI AI 서비스가 로드할 학습된 AI 모델 파일의 컨테이너 내부 경로입니다.
# 일반적으로 변경할 필요 없지만, 모델 파일의 위치가 변경될 경우 수정합니다.
MODEL_PATH=/app/models/inventory_model.pkl

# Django 백엔드에서 FastAPI AI 서비스를 호출할 때 사용할 URL입니다.
# 도커 컴포즈 네트워크 내부에서 서비스 이름으로 접근하므로 일반적으로 변경할 필요 없습니다.
AI_SERVICE_URL=http://ai_service:8001/predict_inventory/

# --- Django SECRET_KEY 설정 ---
# Django 프로젝트의 핵심 비밀 키입니다.
# **이 값은 매우 중요하므로 절대로 다른 사람과 공유하거나 Git에 커밋하지 마세요!**
# 개발 환경에서는 아래의 기본값을 사용하거나, 각 팀원이 고유한 키를 생성하여 사용합니다.
# 프로덕션 환경에서는 반드시 강력하고 고유한 키를 안전하게 주입해야 합니다.
DJANGO_SECRET_KEY=YOUR_DJANGO_SECRET_KEY_FOR_DEV_OR_GENERATE_YOUR_OWN